<h1 class="page-title">How was your stay?</h1>

<%= form_for :review, url: place_reviews_path do |f| %>
<% if @review.errors.any? %>
  <div>
    <h2>
      Please fix the following errors:
    </h2>
    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :user %><br>
    <%= f.text_field :user %>
  </p>

  <p>
    <%= f.label :feedback %><br>
    <%= f.text_area :feedback %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
