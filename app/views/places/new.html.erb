<h1 class="page-title">Put up a place to stay</h1>

<%= form_for :place, url: places_path do |f| %>
<% if @place.errors.any? %>
  <div>
    <h2>
      Please fix the following errors:
    </h2>
    <ul>
      <% @place.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <p>
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :desc %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
